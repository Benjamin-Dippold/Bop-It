<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/backdrop_empty"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Waiting for Prompt!"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/scoreTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="2" />

    <TableLayout
        android:id="@+id/scoreTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:stretchColumns="*"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_weight="3">

        <TableRow>
            <TextView
                android:id="@+id/myTimeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="My Time"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/myTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="XXXXms"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="My Score"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/myScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>
        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"/>

        <TableRow>
            <TextView
                android:id="@+id/enemyTimeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enemy Time"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/enemyTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="XXXXms"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>

        <View
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"/>

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Enemy Score"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/enemyScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
